<h1>Send a Yell</h1>

<div= "form">
  <form method="POST" action="new_yell">
  <div class="dropdown bg-warning rwell-lg send_header col-md-offset-3 col-md-6"><%=  current_partner.nickname %>
    <label for="category"></label>
    <select class="select btn-lg btn-primary" data-style="btn-info" name= "category">
      <% Incident::NEGATIVE.keys.each do |key| %>
        <option value="<%= key %>"><%= key %></option>
      <% end %>
    </select>
  </div>
  <div>
    <label for="description"></label>
    <input class="form-control well" name="description" type="textarea" placeholder="describe action here">
  </div>
  <div>
    <a href="#"><button type="submit" class="btn btn-primary">Submit</button>
  </div>
</form>
</div>
<br>
<div class="incident">
  <%@incidents = Incident.where(relationship_id: params[:id]).where(status: "negative").order("created_at").limit(5)%>
	<% @incidents.each do |incident| %>
		<div class="row" style="padding: 10px;">
						<div class="col-md-4 col-xs-2 text-right">
						</div>
						<div class="col-md-4 col-xs-6">
							<div class="bg-<% if (incident.user_id == current_user.id)%>info<% else %>warning<% end %> rounding">
								<span class="fa-stack fa-lg">
									<i class="fa fa-lg fa-<% if incident.status == "positive" %>heart fa-stack-1x text-danger<% elsif incident.status == "negative" %>heart-o fa-stack-1x text-danger"></i><i class="fa fa-bolt fa-stack-1x text-danger<% elsif incident.status == "forgiven" %>heart-empty text-muted<% end %>" aria-hidden="true"></i>
	  						</span>
								<%= incident.user.nickname %> <%= incident.category %> <%= incident.description %>
								<br>
								<small class="text-muted"><%= incident.created_at.strftime("%A %d %B %Y") %></small>
							</div>
						</div>
			</div>
	<% end %>
</div>
